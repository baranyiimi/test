{% extends 'base.html.twig' %}

{% block title %}Üzenet
{% endblock %}

{% block body %}
	<h1 class="p-3">Üzenet</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ message.id }}</td>
			</tr>
			<tr>
				<th>Név</th>
				<td>{{ message.Name }}</td>
			</tr>
			<tr>
				<th>Email cím</th>
				<td>{{ message.emailAddress }}</td>
			</tr>
			<tr>
				<th>Üzenet</th>
				<td>{{ message.message }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_message_index') }}">Vissza a listához</a>

	<a class="btn btn-dark" href="{{ path('app_message_edit', {'id': message.id}) }}">Módosítás</a>

	{{ include('message/_delete_form.html.twig') }}
{% endblock %}
